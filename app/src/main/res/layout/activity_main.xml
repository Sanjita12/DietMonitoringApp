<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/images2"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_user_img"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Login"
        android:background="#000"
        android:id="@+id/main_login_button"
        android:textColor="#fff"
        android:layout_below="@+id/main_user_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="New User?"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_login_button"
        android:layout_marginTop="50dp"
        android:id="@+id/main_user_new_user"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Register"
        android:background="#000"
        android:id="@+id/main_register_button"
        android:textColor="#fff"
        android:layout_below="@+id/main_user_new_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>