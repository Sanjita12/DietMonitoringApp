<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DietMonitoringResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Today's Report"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:id="@+id/report"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Intake"
            android:textSize="20dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/report"
            android:textColor="#34526f"
            android:id="@+id/report_head_1"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Left"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#34526f"
            android:layout_below="@+id/report"
            android:layout_toRightOf="@+id/report_head_1"
            android:layout_marginTop="20dp"
            android:id="@+id/report_head_2"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Carbohydrates"
            android:textSize="20dp"
            android:textColor="#34526f"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Carbohydrates"
            android:layout_below="@+id/report_head_1"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="total"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Carbohydrates"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/Carbohydrates_count_1"
            android:layout_below="@+id/report_head_1"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="left"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Carbohydrates_count_1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Carbohydrates_count_2"
            android:layout_below="@+id/report_head_1"
            />

        <!--    ================================-->
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Proteins"
            android:textSize="20dp"
            android:textColor="#34526f"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Proteins"
            android:layout_below="@+id/Carbohydrates"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="total"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Proteins"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/Proteins_count_1"
            android:layout_below="@+id/Carbohydrates_count_1"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="left"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Proteins_count_1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Proteins_count_2"
            android:layout_below="@+id/Carbohydrates_count_2"
            />

        <!--    ================================-->
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Fats"
            android:textSize="20dp"
            android:textColor="#34526f"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Fats"
            android:layout_below="@+id/Proteins"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="total"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Fats"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/Fats_count_1"
            android:layout_below="@+id/Proteins_count_1"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="left"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Proteins_count_1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Fats_count_2"
            android:layout_below="@+id/Proteins_count_2"
            />

        <!--    ================================-->
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Iron"
            android:textColor="#34526f"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Iron"
            android:layout_below="@+id/Fats"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="total"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Fats"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/Iron_count_1"
            android:layout_below="@+id/Fats_count_1"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="left"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Fats_count_1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Iron_count_2"
            android:layout_below="@+id/Fats_count_2"
            />

        <!--    ================================-->
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Calcium"
            android:textColor="#34526f"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Calcium"
            android:layout_below="@+id/Iron"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="total"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Calcium"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/Calcium_count_1"
            android:layout_below="@+id/Iron_count_1"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="left"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/Calcium_count_1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Calcium_count_2"
            android:layout_below="@+id/Iron_count_2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="RECOMMENDATION"
            android:layout_below="@id/Calcium"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/recommendation"
            android:visibility="gone"
            android:textSize="18dp"
            android:textFontWeight="800"
            android:textColor="#34526f"
            />
        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:text="For Carbohydrate : Apple, Bread"
            android:layout_below="@id/recommendation"
            android:id="@+id/Carbohydrate_Recommendation"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="18dp"
            android:textFontWeight="400"
            android:textColor="#34526f"
            />
        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:text="For Calcium : Milk"
            android:id="@+id/Calcium_Recommendation"
            android:layout_below="@id/Carbohydrate_Recommendation"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="18dp"
            android:textFontWeight="400"
            android:textColor="#34526f"
            />
        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:text="For Iron : Pulses, Walnut"
            android:layout_below="@id/Calcium_Recommendation"
            android:id="@+id/Iron_Recommendation"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="18dp"
            android:textFontWeight="400"
            android:textColor="#34526f"
            />
        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:text="For Fat : Egg, Milk"
            android:id="@+id/Fat_Recommendation"
            android:layout_below="@id/Iron_Recommendation"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="18dp"
            android:textFontWeight="400"
            android:textColor="#34526f"
            />
        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:text="For Protein : Egg, Meat"
            android:id="@+id/Protein_Recommendation"
            android:layout_below="@id/Fat_Recommendation"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="18dp"
            android:textFontWeight="400"
            android:textColor="#34526f"
            android:layout_marginBottom="50dp"
            />




    </RelativeLayout>




</ScrollView>